
<div class="toDo-section row">
    <div class="col-lg-6">
        <h4>Welcome back</h4>
        <p>Add a List</p>
        <form id="add" class="row">
            <div class="col col-sm-9">
                <textarea type="text" name="toDo"></textarea>
            </div>
            <div class="col col-sm-3">
                <input type="submit" value="Add">
            </div>
        </form>
    </div>

    <div class="col-lg-6">
        <h4>To Do List<span class="saving">Saving...</span></h4>
        <div id="toDo">
            {{#each toDo}}
            <div class="toDo">
                <span class="input"><textarea data-id="{{ @index }}">{{ this }}</textarea></span>

                <button class="remove btn btn-xs" data-id="{{ @index }}"><i class="fa fa-trash" aria-hidden="true"></i></button>
            </div>
            {{/each}}
        </div>
    </div>
</div>